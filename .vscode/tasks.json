{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "cmake-build-debug",
      "type": "shell",
      "command": "cmake -S . -B build -DCMAKE_BUILD_TYPE=Debug && cmake --build build --config Debug",

      "problemMatcher": {
        "owner": "cpp",
        "fileLocation": ["relative", "${workspaceFolder}"],

        "pattern": [
          {
            "regexp": "^(.*?):(\\d+):(\\d+):\\s*(fatal error|error|warning|note):\\s*(.*)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "severity": 4,
            "message": 5
          },
          {
            "regexp": "^(.*?):(\\d+):\\s*(fatal error|error|warning|note):\\s*(.*)$",
            "file": 1,
            "line": 2,
            "severity": 3,
            "message": 4
          }
        ]
      }
    }
  ]
}
